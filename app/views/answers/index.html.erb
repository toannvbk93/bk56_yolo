<h1>Listing answers</h1>
<p id="notice"><%= notice %></p>

<p>
  <h4><%= @question.title %></h4>
  
</p>

<p>
  <%= @question.content %>
</p>

<p>
  by <%= @question.user.email %>
</p>
<% if user_signed_in? and current_user.id == @question.user_id %>
	<%= link_to 'Edit', edit_question_path(@question) %> |
<% end %>
<%= link_to 'Back', questions_path %>
<%= will_paginate %>
<ul class="questions">
  <%= render @answers %>
</ul>
<%= link_to 'Answer', new_question_answer_path(@question) %>
<%= will_paginate %>
